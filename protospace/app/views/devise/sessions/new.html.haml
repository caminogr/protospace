.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: "form-signin"}) do |f|
    %h2.form-signin-heading Please sign in
    = f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control", id: "inputEmail"
    = f.password_field :password, placeholder: "Password", class: "form-control", id: "inputPassword"
    .checkbox
      %label
        %input{:type => "checkbox", :value => "remember-me"}/
        Remember me
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in
  .text-center
    %p 
      Not a member? 
      = link_to "Sign up now", new_user_registration_path
