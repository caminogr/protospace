.col-sm-4.col-md-3.proto-content
  -if user_signed_in? && current_user.id == prototype.user_id
    .dropdown.drop_menu_location
      %button.btn.btn-default.dropdown-toggle#dropdownMenu{:"data-toggle" => "dropdown", :"aria-expanded" => "false",type: :button} Action
      %ul.dropdown-menu{:"aria-labelledby" => "dropdownMenu1"}
        %li
          = link_to "Delete", prototype_path(prototype), method: :delete, rel: :nofollow
        %li
          = link_to "Edit", edit_prototype_path(prototype)
  .thumbnail
    = link_to image_tag("#{prototype.prototype_photos.main.first.image}"), prototype_path(prototype)
    .caption
      %h3 Salvation Army on iPad App Wireframe
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.username}", user_path(prototype.user)
        .proto-posted
          Apr 26
      %ul.proto-tag-list.list-inline
        - prototype.tags.each do |tag|
          %li
            = link_to tag.name, "#", class: "btn btn-default"
